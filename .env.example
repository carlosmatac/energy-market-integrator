# Energy Trading Connectivity Monitor - Environment Configuration
# ================================================================
# Copy this file to .env and adjust values as needed.
# DO NOT commit .env to version control!

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=energy_user
POSTGRES_PASSWORD=energy_secret_2024
POSTGRES_DB=energy_trading
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Connection string (used by ETL client)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===========================================
# Grafana Configuration
# ===========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000
GRAFANA_ROOT_URL=http://localhost:3000

# ===========================================
# Mock Server Configuration
# ===========================================
MOCK_SERVER_HOST=localhost
MOCK_SERVER_PORT=8000
MOCK_SERVER_BASE_URL=http://${MOCK_SERVER_HOST}:${MOCK_SERVER_PORT}

# OAuth2 credentials (for the mock server)
OAUTH_CLIENT_ID=energy_trading_client
OAUTH_CLIENT_SECRET=super_secret_key_2024

# JWT settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ===========================================
# ETL Client Configuration
# ===========================================
# API base URL (points to mock server by default)
API_BASE_URL=http://localhost:8000

# Polling interval in seconds
ETL_POLL_INTERVAL_SECONDS=300

# Retry configuration
ETL_MAX_RETRIES=3
ETL_RETRY_DELAY_SECONDS=5

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# Development Settings
# ===========================================
# Set to "development" or "production"
ENVIRONMENT=development

# Enable debug mode (more verbose logging)
DEBUG=true
